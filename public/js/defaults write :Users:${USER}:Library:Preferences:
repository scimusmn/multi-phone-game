defaults write /Users/${USER}/Library/Preferences/ByHost/com.apple.screensaver idleTime -int 0

defaults write /Users/${USER}/Library/Preferences/com.apple.screensaver askForPassword -bool NO

defaults write /Library/Preferences/com.oracle.java.Java-Updater JavaAutoUpdateEnabled -bool false

pmset autorestart 1


pmset sleep 0

pmset displaysleep 0

pmset disksleep 0

